{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "azureMapsApiVersion": {
            "type": "string"
        },
        "azureMapsSubscriptionKey": {
            "type": "securestring"
        },
        "azureMapsUrl": {
            "type": "string"
        },
        "cosmosDbCollectionId": {
            "type": "string"
        },
        "cosmosDbDatabaseId": {
            "type": "string"
        },
        "cosmosDbEndpoint": {
            "type": "string"
        },
        "cosmosDbKey": {
            "type": "securestring"
        },
        "environmentName": {
            "type": "string"
        },
        "functionAppNames": {
            "type": "array"
        },
        "serviceBusConnectionString": {
            "type": "string"
        },
        "serviceBusQueueName": {
            "type": "string"
        },
        "sharedAppServicePlanName": {
            "type": "string"
        },
        "sharedAppServicePlanResourceGroup": {
            "type": "string"
        },
        "storageAccountName": {
            "type": "string"
        },
        "storageAccountKey": {
            "type": "securestring"
        },
        "templateBaseUrl": {
            "type": "string"
        },
        "workspaceName": {
            "type": "string"
        },
        "workspaceResourceGroup": {
            "type": "string"
        },
        "appInsightsInstrumentationKey": {
        "type": "string"
        }
    },
    "variables": {
        "functionAppTemplateUri": "[concat(parameters('templateBaseUrl'), '/deployments/function-app-resources.json')]",
        "sharedAppServicePlanId": "[resourceId(parameters('sharedAppServicePlanResourceGroup'), 'Microsoft.Web/serverfarms', parameters('sharedAppServicePlanName'))]",
        "appInsightsName": "[concat('dss-', toLower(parameters('configEnvironmentName')), '-', split(parameters('functionAppName'), '-')[2], '-ai')]",
        "storageAccountConnectionString": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=', parameters('storageAccountKey'), ';EndpointSuffix=core.windows.net')]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2023-12-01",
            "name": "[format('{0}/{1}', parameters('functionAppNames')[copyIndex()], 'appsettings')]",
            "properties": {
                "EnvironmentName": "[toUpper(parameters('environmentName'))]",
                "FUNCTIONS_EXTENSION_VERSION": "~4",
                "FUNCTIONS_WORKER_RUNTIME": "dotnet-isolated",
                "MSDEPLOY_RENAME_LOCKED_FILES": "1",
                "AzureWebJobsStorage": "[format('DefaultEndpointsProtocol=https;AccountName={0};AccountKey={1};EndpointSuffix=core.windows.net', parameters('storageAccountName'), parameters('storageAccountKey'))]",
                "APPINSIGHTS_INSTRUMENTATIONKEY": "[parameters('appInsightsInstrumentationKey')]",
                "AzureMapApiVersion": "[parameters('azureMapsApiVersion')]",
                "AzureMapURL": "[parameters('azureMapsUrl')]",
                "SessionConnectionString": "[concat('AccountEndpoint=', parameters('cosmosDbEndpoint'), '/;AccountKey=', parameters('cosmosDbKey'), ';')]",
                "CollectionId": "[parameters('cosmosDbCollectionId')]",
                "DatabaseId": "[parameters('cosmosDbDatabaseId')]",
                "CustomerDatabaseId": "customers",
                "CustomerCollectionId": "customers",
                "InteractionDatabaseId": "interactions",
                "InteractionCollectionId": "interactions",
                "AzureMapSubscriptionKey": "[parameters('azureMapsSubscriptionKey')]",
                "ServiceBusConnectionString": "[parameters('serviceBusConnectionString')]",
                "QueueName": "[parameters('serviceBusQueueName')]",
                "AzureCountrySet": "GB"
            },
            "copy": {
                "name": "FunctionAppSettingsCopy",
                "count": "[length(parameters('functionAppNames'))]"
            }
        },
        {
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2023-12-01",
            "name": "[format('{0}/{1}', parameters('functionAppNames')[copyIndex()], 'connectionstrings')]",
            "properties": {},
            "copy": {
                "name": "FunctionConnectionStringsCopy",
                "count": "[length(parameters('functionAppNames'))]"
            }
        }
    ],
    "outputs": {}
}